extends includes/layout.pug

block append styles
  +link-styles('../src/styles/components/link.scss')
  +link-styles('../src/styles/components/form.scss')
  +link-styles('../src/styles/components/button.scss')
  +link-styles('../src/styles/components/input.scss')
  +link-styles('../src/styles/components/popup.scss')
  +link-styles('../src/styles/pages/settings.scss')

block content
  include includes/settings-content.pug
  .popup
    .popup__content
      .popup__title Загрузите файл
      form.form.popup__form(
        onsubmit='return false'
      )
        each field, key in { avatar: 'Выбрать файл на компьютере' }
          label.form__field.form__field_file(
            data-form-key=key
          ) #{field}
            input.form__field-input.form__field-input_file(
              type='file'
            )
          .form__field-avatar
        button.button.button_primary.popup__button Поменять

block append scripts
  script(
    src='../src/modules/settings/settings-avatar.ts'
  )
