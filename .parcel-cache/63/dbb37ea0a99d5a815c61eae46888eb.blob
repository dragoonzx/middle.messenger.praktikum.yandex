.user {
  display: flex;
}
.user__contacts {
  display: flex;
  flex-direction: column;
}
.user__name {
  font-weight: 600;
  font-size: 12px;
  margin-bottom: 4px;
}
.user__message {
  font-weight: 500;
  font-size: 12px;
  color: var(--color-text-second);
}
.user__additional {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-weight: 500;
  font-size: 8px;
}
.user__time {
  color: var(--color-text-second);
}
.user__messages-new {
  padding: 4px;
  background-color: var(--color-notify);
  border-radius: 50%;
}