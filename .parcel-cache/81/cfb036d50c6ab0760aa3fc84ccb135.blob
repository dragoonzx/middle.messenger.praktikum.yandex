.chat {
  display: flex;
  height: 100%;
}
.chat__userlist {
  display: flex;
  flex-direction: column;
  flex-basis: 310px;
  border-right: 1px solid var(--color-40second);
}
.chat__userlist-settings {
  display: flex;
  flex-direction: column;
  margin-top: 24px;
  padding-left: 12px;
  padding-right: 12px;
}
.chat__userlist-users {
  display: flex;
  flex-direction: column;
}
.chat__window {
  flex-basis: calc(100% - 310px);
  display: flex;
  justify-content: center;
  align-items: center;
}
.chat__user {
  margin-top: 12px;
  margin-bottom: 12px;
  padding-left: 12px;
  padding-right: 12px;
  position: relative;
}
.chat__user::after {
  content: "";
  width: 47px;
  height: 1px;
  background-color: var(--color-40second);
  position: absolute;
  bottom: 0;
}

.userlist-settings {
  border-bottom: 1px solid var(--color-40second);
}
.userlist-settings__link {
  margin-left: auto;
}
.userlist-settings__search {
  margin-top: 24px;
  margin-bottom: 12px;
}