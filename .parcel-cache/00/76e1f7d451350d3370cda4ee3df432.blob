.chat {
  display: flex;
  height: 100%;
}
.chat__userlist {
  display: flex;
  flex-direction: column;
  flex-basis: 310px;
  border-right: 1px solid var(--color-40second);
}
.chat__userlist-settings {
  display: flex;
  flex-direction: column;
  margin-top: 24px;
  padding-left: 12px;
  padding-right: 12px;
}
.chat__userlist-users {
  display: flex;
  flex-direction: column;
  overflow: auto;
}
.chat__userlist-list {
  margin: 0;
  padding: 0;
  list-style-type: none;
}
.chat__userlist-list li:first-child .chat__user {
  margin-top: 12px;
}
.chat__userlist-list li:last-child .chat__user::after {
  content: none;
}
.chat__window {
  position: relative;
  display: flex;
  flex-basis: calc(100% - 310px);
}
.chat__window_empty {
  justify-content: center;
  align-items: center;
}
.chat__window_active {
  flex-direction: column;
  padding: 8px 20px 24px;
}
.chat__user {
  margin-top: 24px;
  margin-bottom: 12px;
  padding-left: 12px;
  padding-right: 12px;
  position: relative;
}
.chat__user::after {
  content: "";
  width: 47px;
  height: 1px;
  background-color: var(--color-40second);
  position: absolute;
  bottom: -12px;
  top: auto;
}
.chat__user-info {
  display: flex;
  justify-content: space-between;
  padding-bottom: 8px;
  border-bottom: 1px solid var(--color-40second);
}
.chat__settings {
  display: flex;
  align-items: center;
}
.chat__settings-popup {
  position: absolute;
  right: 8px;
  left: auto;
  top: 44px;
  bottom: auto;
  display: flex;
  flex-direction: column;
  background: #30444E;
  box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.14);
  border-radius: 12px;
  padding: 16px;
}
.chat__dialog {
  padding-top: 48px;
  padding-bottom: 32px;
}
.chat__actions {
  margin-top: auto;
  padding-top: 24px;
  border-top: 1px solid var(--color-40second);
}

.userlist-settings {
  border-bottom: 1px solid var(--color-40second);
}
.userlist-settings__link {
  margin-left: auto;
}
.userlist-settings__search {
  margin-top: 24px;
  margin-bottom: 12px;
}

.dialog__date {
  font-weight: 500;
  font-size: 12px;
  color: #96A7AF;
  text-align: center;
}
.dialog__messages {
  margin-top: 32px;
}

.settings-popup__prop {
  display: flex;
  align-items: center;
}
.settings-popup__prop:not(:last-child) {
  margin-bottom: 16px;
}
.settings-popup__icon {
  margin-right: 8px;
}

.message {
  padding: 12px;
  max-width: fit-content;
  min-width: 114px;
  border-radius: 12px;
}
.message_opposite {
  background: #30444E;
  border-top-left-radius: 0;
}
.message_ours {
  background: #3DD598;
  border-bottom-right-radius: 0;
  margin-left: auto;
}
.message__content {
  font-weight: 500;
  font-size: 12px;
  max-width: 380px;
}
.message__time {
  font-weight: 500;
  font-size: 8px;
  text-align: right;
  color: #96A7AF;
}
.message__time_ours {
  color: white;
}
.message__form {
  margin: 0;
  display: flex;
  align-items: center;
}
.message__input {
  margin-left: 12px;
  margin-right: 12px;
}
.message__submit {
  display: flex;
  justify-content: center;
}
.message__button {
  width: 34px;
  height: 34px;
  border-radius: 50%;
  border: none;
  background-color: var(--color-success);
  cursor: pointer;
  outline: none;
}
.message__attachments-popup {
  position: absolute;
  right: auto;
  left: 8px;
  top: auto;
  bottom: 64px;
  display: flex;
  flex-direction: column;
  background: #30444E;
  box-shadow: 0px 0px 6px rgba(0, 0, 0, 0.14);
  border-radius: 12px;
  padding: 16px;
}
