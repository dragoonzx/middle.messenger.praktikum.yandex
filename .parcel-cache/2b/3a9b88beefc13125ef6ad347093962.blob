.chat {
  display: flex;
  height: 100%;
}
.chat__list {
  display: flex;
  flex-direction: column;
  flex-basis: 310px;
}
.chat__list-settings {
  display: flex;
  flex-direction: column;
}
.chat__list-users {
  display: flex;
  flex-direction: column;
}
.chat__window {
  flex-basis: calc(100% - 310px);
  display: flex;
  justify-content: center;
  align-items: center;
}