.chat {
  display: flex;
  height: 100%;
}
.chat__userlist {
  display: flex;
  flex-direction: column;
  flex-basis: 310px;
  border-right: 1px solid var(--color-40second);
}
.chat__userlist-settings {
  display: flex;
  flex-direction: column;
  margin-top: 24px;
  padding-left: 12px;
  padding-right: 12px;
}
.chat__userlist-users {
  display: flex;
  flex-direction: column;
  overflow: auto;
}
.chat__window {
  flex-basis: calc(100% - 310px);
  display: flex;
}
.chat__window_empty {
  justify-content: center;
  align-items: center;
}
.chat__window_active {
  flex-direction: column;
  padding: 8px 20px;
}
.chat__user {
  margin-top: 12px;
  margin-bottom: 12px;
  padding-left: 12px;
  padding-right: 12px;
  position: relative;
}
.chat__user:not(:last-child)::after {
  content: "";
  width: 47px;
  height: 1px;
  background-color: var(--color-40second);
  position: absolute;
  bottom: -12px;
  top: auto;
}
.chat__user-info {
  padding-bottom: 8px;
  border-bottom: 1px solid var(--color-40second);
}
.chat__dialog {
  padding-top: 48px;
  padding-bottom: 32px;
}
.chat__actions {
  margin-top: auto;
  padding-top: 12px;
  border-top: 1px solid var(--color-40second);
}

.userlist-settings {
  border-bottom: 1px solid var(--color-40second);
}
.userlist-settings__link {
  margin-left: auto;
}
.userlist-settings__search {
  margin-top: 24px;
  margin-bottom: 12px;
}

.dialog__date {
  font-weight: 500;
  font-size: 12px;
  color: #96A7AF;
  text-align: center;
}
.dialog__messages {
  margin-top: 32px;
}

.message {
  padding: 12px;
  max-width: fit-content;
  min-width: 114px;
  border-radius: 12px;
}
.message_opposite {
  background: #30444E;
  border-top-left-radius: 0;
}
.message_ours {
  background: #3DD598;
  border-bottom-right-radius: 0;
  margin-left: auto;
}
.message__content {
  font-weight: 500;
  font-size: 12px;
  max-width: 380px;
}
.message__time {
  font-weight: 500;
  font-size: 8px;
  text-align: right;
  color: #96A7AF;
}
.message__time_ours {
  color: white;
}
.message__form {
  margin: 0;
}