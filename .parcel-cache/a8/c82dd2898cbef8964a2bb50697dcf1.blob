@charset "UTF-8";
.settings {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 100%;
}
.settings__image {
  width: 132px;
  height: 132px;
}
.settings__name {
  font-weight: 600;
  font-size: 16px;
  margin-top: 16px;
}
.settings__avatar {
  position: relative;
}
.settings__avatar::before {
  content: "Поменять аватар";
  position: absolute;
  top: 50%;
  left: 50%;
}
.settings__fields {
  width: 510px;
  margin-top: 44px;
}
.settings__list {
  list-style-type: none;
  margin: 0;
  padding: 0;
}
.settings__list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12px;
}
.settings__list-item:not(:last-child) {
  padding-bottom: 12px;
  border-bottom: 1px solid var(--color-40second);
}
.settings__button {
  margin-top: 142px;
  margin-left: auto;
  margin-right: auto;
  width: 280px;
}
.settings__form {
  display: flex;
  flex-direction: column;
}

.list-item {
  font-weight: 500;
  font-size: 12px;
  color: #96A7AF;
  max-width: 200px;
}
.list-item_main {
  font-weight: 500;
  font-size: 12px;
}