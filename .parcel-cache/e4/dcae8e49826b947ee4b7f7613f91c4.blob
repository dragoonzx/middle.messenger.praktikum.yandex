.page-404 {
  display: flex;
  flex-direction: column;
  position: relative;
  height: 100%;
  justify-content: center;
  align-items: center;
}
.page-404__header {
  font-weight: 500;
  font-size: 40px;
  margin: 0;
}
.page-404__text {
  font-weight: 500;
  font-size: 24px;
  margin: 0;
  margin-top: 8px;
}
.page-404__link {
  margin-top: 64px;
}
.page-404__bg-image {
  position: absolute;
  bottom: 0;
  top: auto;
  right: 0;
  left: auto;
  z-index: var(--layer-bg);
}