@import url("https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Montserrat&display=swap");
:root {
  /* Font families. */
  --font-family-inter: "Inter", sans-serif;
  --font-family-montserrat: "Montserrat", sans-serif;
  /* Font sizes. */
  --font-size-sm: 0.875rem;
  --font-size-md: 1rem;
  --font-size-lg: 1.125rem;
  --font-size-xl: 1.25rem;
  --font-size-2xl: 1.5rem;
  --font-size-3xl: 2rem;
  --font-size-4xl: 3rem;
  /* Line heights. */
  --line-height-sm: 1.25;
  --line-height-md: 1.5;
  /* Letter spacings. */
  --letter-spacing-sm: 0.05em;
  --letter-spacing-md: 0.1em;
}
body {
  font-family: var(--font-family-inter);
  font-size: var(--font-size-md);
  line-height: var(--line-height-md);
}
:root {
  /* colors: */
  --color-bg: #22343C;
  --color-zero: #30444E;
  --color-success: #3DD598;
  --color-error: #FF565E;
  --color-warning: #FF974A;
  --color-notify: #0062FF;
  /* color with opacity 0.4: */
  --color-40second: #96A7AF66;
  --color-40black: #00000066;
  --color-text-primary: #fff;
  --color-text-second: #96A7AF;
  /* z-index layers: */
  --layer-bg: -1;
  --layer-zero: 0;
  --layer-first: 1;
  --layer-second: 2;
  --layer-third: 3;
}
body {
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  overflow-x: hidden;
  scroll-behavior: smooth;
  background-color: var(--color-bg);
  color: var(--color-text-primary);
  position: relative;
  margin: 0px;
  box-sizing: border-box;
}