.form {
  margin: 0;
}
.form__title {
  font-weight: 500;
  font-size: 20px;
  text-align: center;
  margin-bottom: 28px;
}
.form__field {
  display: flex;
  flex-direction: column;
  font-size: 8px;
  font-weight: 500;
  color: var(--color-text-second);
}
.form__field:not(:last-child) {
  margin-bottom: 16px;
}
.form__field-input {
  margin-top: 8px;
  background: transparent;
  border: none;
  border-bottom: 1px solid #3DD598;
  outline: none;
  color: white;
  padding-bottom: 4px;
}
.form__field-input_file {
  opacity: 0;
  position: absolute;
  z-index: -1;
}
.form__field_file {
  font-weight: 500;
  font-size: 12px;
  color: var(--color-success);
  text-align: center;
}
.form__button {
  margin-top: 48px;
}